<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/totLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="#fff" >

        <RelativeLayout
            android:id="@+id/layClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/viewLineVertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/datelay"
            android:background="#fff"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eventName"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000" />

            <TextView
                android:id="@+id/discTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventName"
                android:text="created a task"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#c0c0c0" />

            <LinearLayout
                android:id="@+id/layTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discTxt"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/timeImg"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    />

                <TextView
                    android:id="@+id/startTymEndTymTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04.00-05.00"
                    android:padding="1dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#B4B6BA" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/viewLineVertical"
            android:layout_width="1dp"
            android:layout_height="82dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/datelay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/date_activity_circle_bg" >

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day"
                android:layout_centerHorizontal="true"
                android:text="10"
                android:textColor="#ADB1B4"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="mon"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#2C333D" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>