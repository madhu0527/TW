<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linkpersonLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="130">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:src="@drawable/ic_contact" />

            <TextView
                android:id="@+id/linkPersonTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="Link a person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="+"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linkOrgLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="130">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:src="@drawable/ic_contact" />

            <TextView
                android:id="@+id/orgNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:text="Link an organization" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:text="+"
                android:textSize="30dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#ccc"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:src="@drawable/ic_contact" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/mailEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                float:fletPadding="5dp">

                <EditText
                    android:id="@+id/dealNameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Deal title"
                    android:singleLine="true"
                    android:textSize="25dp" />

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/mailEdit"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="18dp"
            android:background="#ccc"
            android:orientation="horizontal"></RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:src="@drawable/ic_contact"
                android:visibility="invisible" />

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                float:fletPadding="5dp">

                <EditText
                    android:id="@+id/dealValueEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Deal value"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textSize="17dp" />

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/mailEdit"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="18dp"
            android:background="#ccc"
            android:orientation="horizontal"></RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/currencytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_weight="80"
                android:padding="5dp"
                android:text="Currency" />

            <Spinner
                android:id="@+id/currencySpnr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currencytxt"
                android:layout_marginLeft="82dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/mailEdit"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="18dp"
            android:background="#ccc"
            android:orientation="horizontal"></RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/peipetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_weight="80"
                android:padding="5dp"
                android:text="Pipeline" />

            <Spinner
                android:id="@+id/pipelineSpnr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/peipetxt"
                android:layout_marginLeft="82dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/mailEdit"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="18dp"
            android:background="#ccc"
            android:orientation="horizontal"></RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/stagetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_weight="80"
                android:padding="5dp"
                android:text="Stage" />

            <Spinner
                android:id="@+id/stagesSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stagetxt"
                android:layout_marginLeft="82dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="18dp"
            android:background="#ccc"
            android:orientation="horizontal"></RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/assignedtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_weight="80"
                android:padding="5dp"
                android:text="Expected close date" />

            <RelativeLayout
                android:id="@+id/dateToLay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/assignedtxt"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="5dp"
                android:gravity="left">

                <EditText
                    android:id="@+id/expectedDateEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_calender"
                    android:drawablePadding="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:gravity="left"
                    android:hint="  License Ends on"
                    android:singleLine="true"
                    android:textSize="16dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="78dp"
            android:layout_marginRight="18dp"
            android:background="#ccc"
            android:orientation="horizontal"></RelativeLayout>
    </LinearLayout>
</ScrollView>