<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item android:left="1dp" android:top="1dp"><shape>
                    <solid android:color="#F9F9FA" />

                    <corners android:radius="1dip" />
                </shape></item>
        </layer-list></item>
    <item><layer-list>

            <!-- SHADOW LAYER -->
            <item android:left="1dp" android:top="1dp"><shape>
                    <solid android:color="#e0e0e0" />

                    <corners android:radius="1dip" />
                </shape></item>
            <!-- CONTENT LAYER -->
            <item android:bottom="1.5dp" android:right="1dp"><shape>
                    <solid android:color="#F9F9FA" />

                    <corners android:radius="1dip" />
                </shape></item>
        </layer-list></item>

</selector>